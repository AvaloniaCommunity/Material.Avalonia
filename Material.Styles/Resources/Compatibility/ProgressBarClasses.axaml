<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <Styles.Resources>
        <ResourceDictionary>
          <ControlTheme x:Key="LinearProgressBar" TargetType="ProgressBar"
                        BasedOn="{StaticResource MaterialProgressBar}" />

          <ControlTheme x:Key="CircularProgressBar" TargetType="ProgressBar"
                        BasedOn="{StaticResource MaterialCircularProgressBar}" />
        </ResourceDictionary>
    </Styles.Resources>
    
    <Style Selector="ProgressBar.circular">
      <Setter Property="Theme" Value="{StaticResource MaterialCircularProgressBar}" />
    </Style>
    
    <Style Selector="ProgressBar.Circular">
      <Setter Property="Theme" Value="{StaticResource MaterialCircularProgressBar}" />
    </Style>
</Styles>
