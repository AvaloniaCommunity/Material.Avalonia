<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:assists="clr-namespace:Material.Styles.Assists">
  <ControlTheme x:Key="MaterialContextMenu" TargetType="ContextMenu">
    <Setter Property="WindowManagerAddShadowHint" Value="False" />
    <Setter Property="Background" Value="{DynamicResource MaterialCardBackgroundBrush}" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="0, 8" />
    <Setter Property="TextBlock.FontSize" Value="14" />
    <Setter Property="TextBlock.FontWeight" Value="Normal" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border Name="PART_RootBorder"
                Padding="{TemplateBinding Padding}"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">

          <ScrollViewer Name="PART_ScrollViewer">
            <ItemsPresenter Name="PART_ItemsPresenter"
                            ItemsPanel="{TemplateBinding ItemsPanel}" />
          </ScrollViewer>
        </Border>
      </ControlTemplate>
    </Setter>

    <Style Selector="^ /template/ Border#PART_RootBorder">
      <Setter Property="CornerRadius" Value="4" />
      <Setter Property="Margin" Value="8" />
      <Setter Property="assists:ShadowAssist.ShadowDepth" Value="2" />
    </Style>

    <Style Selector="^ /template/ Border#PART_RootBorder /template/ Border#PART_BackgroundBorder">
      <Setter Property="IsHitTestVisible" Value="False" />
    </Style>

    <Style Selector="^ /template/ ItemsPresenter#PART_ItemsPresenter">
      <Setter Property="KeyboardNavigation.TabNavigation" Value="Continue" />
    </Style>
  </ControlTheme>

  <ControlTheme x:Key="{x:Type ContextMenu}" TargetType="ContextMenu"
                BasedOn="{StaticResource MaterialContextMenu}" />
</ResourceDictionary>
