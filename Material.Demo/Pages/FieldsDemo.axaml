<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
             xmlns:wpf="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             x:Class="Material.Demo.Pages.FieldsDemo">
  <StackPanel Margin="16, 0" HorizontalAlignment="Stretch">
    <TextBlock Classes="Headline4 Subheadline" Text="Standard fields"/>

    <WrapPanel  HorizontalAlignment="Stretch">
      <StackPanel>
        <TextBlock Classes="Headline6 Subheadline2" Text="Single-Line fields"/>
        <StackPanel Orientation="Horizontal">
          <StackPanel.Styles>
            <Style Selector="TextBox">
              <Setter Property="Margin" Value="8"/>
              <Setter Property="Width" Value="180"/>
            </Style>
          </StackPanel.Styles>
          <TextBox Text="The simplest field ever!"/>
          <TextBox Watermark="Field with watermark"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <StackPanel.Styles>
            <Style Selector="TextBox">
              <Setter Property="Margin" Value="8"/>
              <Setter Property="Width" Value="180"/>
            </Style>
          </StackPanel.Styles>
          <TextBox PasswordChar="*" UseFloatingWatermark="True" wpf:TextFieldAssist.Label="Field for secrets"/>
          <TextBox Classes="clearButton" wpf:TextFieldAssist.Label="Message field" 
                   UseFloatingWatermark="True"
                   Text="Clear those texts!"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <StackPanel.Styles>
            <Style Selector="TextBox">
              <Setter Property="Margin" Value="8"/>
              <Setter Property="Width" Value="240"/>
            </Style>
          </StackPanel.Styles>
          <TextBox PasswordChar="*" Classes="revealPasswordButton" UseFloatingWatermark="True" 
                   wpf:TextFieldAssist.Label="Password"
                   Text="wow! You find my password!"/>
          <TextBox Watermark="Disabled field" Width="120" IsEnabled="False"/>
        </StackPanel>
      </StackPanel>
      <StackPanel>
       <TextBlock Classes="Headline6 Subheadline2" Text="Multi-Line fields"/>
        <StackPanel Orientation="Horizontal">
          <StackPanel.Styles>
            <Style Selector="TextBox">
              <Setter Property="Margin" Value="8"/>
              <Setter Property="Width" Value="360"/>
            </Style>
          </StackPanel.Styles>
          <TextBox AcceptsReturn="True" 
                   TextWrapping="Wrap"
            Text="Multiline. Lorem ipsum dolor sit amet, consectetur 
 adipiscing elit, sed do eiusmod tempor incididunt ut labore
 et dolore magna aliqua. The quick brown fox jumps over the 
 lazy dog. War and peace. Keep going. Go on. For how long? 
 Not long. Lorem ipsum dolor sit amet, consectetur adipiscing 
 elit, sed do eiusmod tempor incididunt ut labore et dolore magna
 aliqua."/> 
        </StackPanel>
      </StackPanel>
      <StackPanel Width="400">
        <TextBlock Classes="Headline6 Subheadline2" Text="Rich text box"/>
        <TextBlock TextWrapping="Wrap" Text="Unfortunately, the RichTextBox
is not supported officially. But you can use AvaloniaEdit for support this feature."/>
        <StackPanel Orientation="Horizontal">
           
        </StackPanel>
      </StackPanel>
    </WrapPanel>

    <TextBlock Classes="Headline4 Subheadline" Text="Filled fields"/>
  
    <WrapPanel  HorizontalAlignment="Stretch">
      <StackPanel>
        <TextBlock Classes="Headline6 Subheadline2" Text="Single-Line fields"/>
        <StackPanel Orientation="Vertical">
          <StackPanel.Styles>
            <Style Selector="TextBox">
              <Setter Property="Margin" Value="8"/>
              <Setter Property="Width" Value="240"/>
            </Style>
          </StackPanel.Styles>
          <TextBox Classes="Filled" wpf:TextFieldAssist.Label="Filled TextBox" UseFloatingWatermark="True"/>
          <TextBox Classes="Filled revealPasswordButton" wpf:TextFieldAssist.Label="Password" PasswordChar="*" UseFloatingWatermark="True"/>
          <TextBox Classes="Filled clearButton" wpf:TextFieldAssist.Label="Text field" UseFloatingWatermark="True"/>
          <TextBox Classes="Filled" IsEnabled="False" wpf:TextFieldAssist.Label="Disabled Field" UseFloatingWatermark="True" Text="Hello World!"/>
        </StackPanel>
      </StackPanel>
      <StackPanel>
        <TextBlock Classes="Headline6 Subheadline2" Text="Multi-Line fields"/>
        <StackPanel Orientation="Horizontal">
          <StackPanel.Styles>
            <Style Selector="TextBox">
              <Setter Property="Margin" Value="8"/>
              <Setter Property="Width" Value="380"/>
            </Style>
          </StackPanel.Styles>
          <TextBox  UseFloatingWatermark="True"
                    wpf:TextFieldAssist.Label="Multiline textfield"
                    Classes="Filled" 
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
            Text="Multiline. Lorem ipsum dolor sit amet, consectetur 
 adipiscing elit, sed do eiusmod tempor incididunt ut labore
 et dolore magna aliqua. The quick brown fox jumps over the 
 lazy dog. War and peace. Keep going. Go on. For how long? 
 Not long. Lorem ipsum dolor sit amet, consectetur adipiscing 
 elit, sed do eiusmod tempor incididunt ut labore et dolore magna
 aliqua."/>
        </StackPanel>
      </StackPanel>
    </WrapPanel>

    <TextBlock Classes="Headline4 Subheadline" Text="Outline fields"/>

    <WrapPanel  HorizontalAlignment="Stretch">
      <StackPanel>
        <TextBlock Classes="Headline6 Subheadline2" Text="Single-Line fields"/>
        <StackPanel Orientation="Vertical">
          <StackPanel.Styles>
            <Style Selector="TextBox">
              <Setter Property="Margin" Value="8"/>
              <Setter Property="Width" Value="240"/>
            </Style>
          </StackPanel.Styles>
          <TextBox Classes="Outline" wpf:TextFieldAssist.Label="Filled TextBox" UseFloatingWatermark="True"/>
          <TextBox Classes="Outline revealPasswordButton" wpf:TextFieldAssist.Label="Password" PasswordChar="*" UseFloatingWatermark="True"/>
          <TextBox Classes="Outline clearButton" wpf:TextFieldAssist.Label="Text field" UseFloatingWatermark="True"/>
          <TextBox Classes="Outline" IsEnabled="False" wpf:TextFieldAssist.Label="Disabled Field" UseFloatingWatermark="True" Text="Hello World!"/>
        </StackPanel>
      </StackPanel>
      <StackPanel>
        <TextBlock Classes="Headline6 Subheadline2" Text="Multi-Line fields"/>
        <StackPanel Orientation="Horizontal">
          <StackPanel.Styles>
            <Style Selector="TextBox">
              <Setter Property="Margin" Value="8"/>
              <Setter Property="Width" Value="380"/>
            </Style>
          </StackPanel.Styles>
          <TextBox  UseFloatingWatermark="True"
                    wpf:TextFieldAssist.Label="Multiline textfield"
                    Classes="Outline"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
            Text="Multiline. Lorem ipsum dolor sit amet, consectetur 
 adipiscing elit, sed do eiusmod tempor incididunt ut labore
 et dolore magna aliqua. The quick brown fox jumps over the 
 lazy dog. War and peace. Keep going. Go on. For how long? 
 Not long. Lorem ipsum dolor sit amet, consectetur adipiscing 
 elit, sed do eiusmod tempor incididunt ut labore et dolore magna
 aliqua."/>
        </StackPanel>
      </StackPanel>
    </WrapPanel>

  </StackPanel>
</UserControl>
