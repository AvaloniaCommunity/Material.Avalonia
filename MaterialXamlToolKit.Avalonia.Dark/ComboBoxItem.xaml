<Styles xmlns="https://github.com/avaloniaui">

  <Style Selector="ComboBoxItem">
    <Setter Property="Background" Value="{DynamicResource GreyDarken4Brush}" />
  </Style>
  <Style Selector="ComboBoxItem:pointerover">
    <Setter Property="Background" Value="{DynamicResource GreyDarken3Brush}" />
  </Style>

  <Style Selector="ComboBoxItem:selected:focus">
    <Setter Property="Background" Value="{DynamicResource BrownDarken3Brush}" />
  </Style>

  <Style Selector="ComboBoxItem:selected:focus:pointerover">
    <Setter Property="Background" Value="{DynamicResource BrownDarken2Brush}" />
  </Style>
</Styles>
