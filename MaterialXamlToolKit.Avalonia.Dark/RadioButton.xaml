<Styles xmlns="https://github.com/avaloniaui">

  <Style Selector="RadioButton">
    <Setter Property="BorderBrush" Value="{DynamicResource GreyDarken2Brush}" />
    <Setter Property="Foreground" Value="{DynamicResource BrownLighten4Brush}" />
  </Style>
  <Style Selector="RadioButton:pointerover">
    <Setter Property="BorderBrush" Value="{DynamicResource GreyDarken1Brush}" />
  </Style>

  <Style Selector="RadioButton:pointerover /template/ Ellipse#border">
    <Setter Property="Stroke" Value="{DynamicResource GreyDarken1Brush}" />
  </Style>
  <Style Selector="RadioButton:checked /template/ Ellipse#border">
    <Setter Property="Stroke" Value="{DynamicResource GreyDarken2Brush}" />
  </Style>
  <Style Selector="RadioButton:checked /template/ Ellipse#checkMark">
    <Setter Property="Fill" Value="{DynamicResource LightGreenDarken3Brush}" />
  </Style>
  <Style Selector="RadioButton:checked:pointerover /template/ Ellipse#checkMark">
    <Setter Property="Fill" Value="{DynamicResource LightGreenDarken2Brush}" />
  </Style>
  <Style Selector="RadioButton /template/ Ellipse#ripple">
    <Setter Property="Fill" Value="{DynamicResource LightGreenDarken3Brush}" />
  </Style>
</Styles>