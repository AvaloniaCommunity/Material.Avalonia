<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style Selector="Slider /template/ Thumb /template/ Ellipse">
    <Setter Property="Fill" Value="{DynamicResource LightGreenDarken3Brush}" />
    <Setter Property="Stroke" Value="{DynamicResource LightGreenDarken2Brush}" />
    <Setter Property="StrokeThickness" Value="1" />
  </Style>

  <Style Selector="Slider /template/ Border#TrackBackground">
    <Setter Property="BorderThickness" Value="2" />
    <Setter Property="BorderBrush" Value="{DynamicResource GreyDarken3Brush }" />
  </Style>

  <Style Selector="Slider /template/ RepeatButton#PART_DecreaseButton.repeattrack">
    <Setter Property="Background" Value="{DynamicResource BrownDarken1Brush }" />
  </Style>
</Styles>
